{
  "name": "expense-tracker-backend",
  "version": "1.0.0",
  "description": "Expense Tracker Backend API - Node.js + TypeScript + Express + Mongoose",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "postbuild": "node -e \"const fs=require('fs'); if(!fs.existsSync('dist/server.js')) { console.error('ERROR: dist/server.js not found after build!'); process.exit(1); } else { console.log('âœ“ Build verified: dist/server.js exists'); }\"",
    "start": "node start.js",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "generate:jwt-secrets": "node scripts/generate-jwt-secrets.js",
    "setup:s3": "tsx scripts/setup-s3-buckets.ts",
    "seed:users": "tsx scripts/seed-users.ts",
    "check-db-roles": "tsx scripts/check-db-roles.ts",
    "migrate:db": "tsx scripts/migrate-add-fields.ts",
    "seed:sample-data": "tsx scripts/seed-sample-data.ts",
    "worker": "tsx src/worker/ocr.worker.ts",
    "worker:prod": "node dist/worker/ocr.worker.js",
    "check:ocr-s3": "tsx scripts/check-ocr-and-s3.ts",
    "start:redis-worker": "powershell -ExecutionPolicy Bypass -File scripts/start-redis-and-worker.ps1",
    "setup:s3-cors": "tsx scripts/setup-s3-cors.ts",
    "init:companies": "tsx scripts/init-companies-collection.ts",
    "generate-employee-ids": "tsx scripts/generate-employee-ids.ts",
    "assign-unique-ids": "tsx scripts/assign-unique-ids-to-existing-users.ts",
    "test": "jest --testPathPattern=tests --testPathIgnorePatterns=security-tests",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=tests --testPathIgnorePatterns=security-tests",
    "test:security": "jest --testPathPattern=security-tests --testTimeout=60000",
    "test:all": "npm run test && npm run test:security",
    "test:watch": "jest --watch --testPathPattern=tests",
    "test:coverage": "jest --coverage --testPathPattern=tests --testPathIgnorePatterns=security-tests",
    "test:auth": "jest tests/auth.test.ts",
    "test:expenses": "jest tests/expenses.test.ts",
    "test:concurrency": "jest tests/concurrency.test.ts --testTimeout=120000",
    "test:authorization": "jest tests/authorization.test.ts",
    "test:profile-image": "jest tests/profileImage.test.ts",
    "test:security:jwt": "jest --testPathPattern=security-tests/jwtAttacks.test.ts --testTimeout=60000",
    "test:security:api": "jest --testPathPattern=security-tests/apiAttacks.test.ts --testTimeout=60000",
    "test:security:rate": "jest --testPathPattern=security-tests/rateLimiting.test.ts --testTimeout=120000"
  },
  "keywords": [
    "expense-tracker",
    "nodejs",
    "typescript",
    "express",
    "mongoose"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "@types/multer": "^2.0.0",
    "@types/socket.io": "^3.0.1",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.22.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "firebase-admin": "^13.6.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.2",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "openai": "^4.68.0",
    "pdf-parse": "^2.4.5",
    "pdf-to-img": "^5.0.0",
    "pdfkit": "^0.15.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "resend": "^4.0.1",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^7.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/pdf-parse": "^1.1.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.18.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "tar": "^7.5.3"
  }
}
